<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Generic Page  -->
        <service id="boxalino.api.content.page.response" class="Boxalino\RealTimeUserExperienceApi\Framework\Content\Page\ApiResponsePage"/>
        <service id="Boxalino\RealTimeUserExperienceApi\Framework\Content\Page\ApiLoader">
            <argument type="service" id="Boxalino\RealTimeUserExperienceApi\Service\Api\ApiCallServiceInterface"/>
            <argument type="service" id="Boxalino\RealTimeUserExperienceApi\Service\Api\Util\ConfigurationInterface"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <!-- Generic Api content loader on the page -->
        <service id="boxalino.api.content.page.loader" class="Boxalino\RealTimeUserExperienceApi\Framework\Content\Page\ApiPageLoader"
                 parent="Boxalino\RealTimeUserExperienceApi\Framework\Content\Page\ApiLoader" shared="false">
        </service>

        <!-- Generic CMS loader extension with API call -->
        <service id="boxalino.api.content.page.cms"
                 class="Boxalino\RealTimeUserExperienceApi\Framework\Content\Page\ApiCmsLoader"
                 parent="Boxalino\RealTimeUserExperienceApi\Framework\Content\Page\ApiLoader" shared="false">
        </service>

        <!-- Abstract Entity displaying how to access hit IDs from the response -->
        <service id="boxalino.api.content.collection" class="Boxalino\RealTimeUserExperienceApi\Framework\Content\Listing\ApiEntityCollectionModelAbstract"
                 public="true" shared="false" abstract="true"/>

        <!-- Boxalino facet handler model (used in layout block definition) -->
        <service id="Boxalino\RealTimeUserExperienceApi\Framework\Content\Listing\ApiFacetModelAbstract" public="true" abstract="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <!-- Boxalino facet handler model (used in layout block definition) -->
        <service id="Boxalino\RealTimeUserExperienceApi\Framework\Content\Listing\ApiCmsModel" public="true"/>
    </services>

</container>
